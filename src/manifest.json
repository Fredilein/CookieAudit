{
  "name": "CookieAudit",
  "description": "Check if a website respects your cookie preferences.",
  "version": "0.1",
  "manifest_version": 3,
   "icons": {
    "16": "./logo/icon16.png",
    "32": "./logo/icon32.png",
    "128": "./logo/icon128.png"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/consentNotice.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*"
      ],
      "matches": ["https://*/*"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "cookies",
    "activeTab",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": ["<all_urls>", "*://*/*"]
}
